<% @page_title = "Admin Login" %>

<div class="container">
    <div class="row vertical-offset-100">
    	<div class="col-md-4 col-md-offset-4">
    		<div class="panel panel-default">
	      	<div class="panel-heading">
	      		<h4 class="">Please Sign in</h4>
					</div>
		 				<div class="panel-body">
		         <%= form_tag(:action => 'attempt_login') do %>
							<div class="form-group">
								<%= text_field_tag((:username), nil, :class => 'form-control', :style => 'border-radious:0px', :id => 'username', :placeholder => 'Enter username') %>
							</div>
							<div class="form-group">
								<%= password_field_tag((:password), nil, :class => 'form-control', :style => 'border-radious:0px', :id => 'password', :placeholder => 'Password') %>
							</div>
							<input name="commit" type="submit" class="btn btn-block btn-primary" value="Log In">
							<% end %>
						</div><!-- End Panel Body -->
				</div><!-- End Panel -->
			</div><!-- End Col -->
	</div><!-- End Row -->
</div><!-- End Container -->

		
