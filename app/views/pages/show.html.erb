<% @page_title = "Details" %>


<div class="container clearfix">
	<div class="row">
		<div class="col-md-8">
			<%= link_to("<< Back to list", {:action => 'index', :subject_id => @subject.id}, :class => 'btn btn-default btn-sm') %>
			
			<h2>Show Page</h2>
			<br />

				<table  class ="table table-bordered table-condensed" summary="Page detail view">
					<tr>
						<th>Name</th>
						<td><%= @page.name %></td>
					</tr>
					<tr>
						<th>Position</th>
						<td><%= @page.position %></td>
					</tr>
					<tr>
						<th>Visible?</th>
						<td><%= @page.visible ? 'true' : 'false' %></td>
					</tr>
					<tr>
						<th>Subject ID</th>
						<td><%= @page.subject_id %></td>
					</tr>
					<tr>
						<th>Permalink</th>
						<td><%= @page.permalink %></td>
					</tr>
					<tr>
						<th>Created</th>
						<td><%= @page.created_at %></td>
					</tr>
					<tr>
						<th>Updated</th>
						<td><%= @page.updated_at %></td>
					</tr>
				</table>
		</div>
	</div>
</div>
