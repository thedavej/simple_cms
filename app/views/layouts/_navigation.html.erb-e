<% subjects ||= [] %>
<div id="navigation">
	<ul>
		<li><%= link_to_unless_current("Home", 
		{:action => 'index'}) %>
		<% subjects.each do |subject| %>
		<li>
			<%= link_to_unless_current(subject.name,
				{:action => 'show_pages', :subject_id => subject.id}) %>
			<ul>
				<% subject.pages.visible.sorted.each do |page| %>
				<li><%= link_to_unless_current(page.name, 
					{:action =>'show', :permalink =>
				page.permalink}) %></li>
			<% end %>
			</ul>
		</li>
		<% end %>
	</ul>
</div>