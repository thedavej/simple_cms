<% @page_title = "Admin Users List" %>

<div class="container clearfix">
	<div class="row">
		<div class="col-md-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h2>Admin Users</h2>
				</div><!-- End Panel Heading -->
				<div class="panel-body">
					<div class="clearfix"></div>
					<%= link_to("<< Back to Main Menu", {:controller => 'access',:action => 'index'}, :class => 'btn btn-default btn-sm') %>

					<%= link_to({:action => 'new'}, :class => 'btn btn-success btn-sm pull-right', :data => {:title => 'New', :toggle => 'modal', :target => '#new', :placement => 'top'}, :rel => 'tooltip') do %>
								<span class="glyphicon glyphicon-file"></span> New Admin User
						<% end %>
					</div><!-- End Pandel Body -->
					<div class="table-responsive">
						<table class="table table-bordered table-striped table-condensed" summary="admin_user list">
							<thead>
								<th>Name</th>
								<th>User Name</th>
								<th>Email</th>
								<th></th>
							</thead>
							<tbody>
							<% @admin_users.each do |admin_user| %>
							<tr>
								<td><%= admin_user.name %></td>
								<td><%= admin_user.username %></td>
								<td><%= mail_to(admin_user.email) %></td>
								<td class="actions">
									<div class="btn-group">
										<button type="button" class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown">Actions 
									      <span class="glyphicon glyphicon-cog"></span><span class="caret"></span>
								    </button>
								    <ul class="dropdown-menu" role="menu">
								    	<li class="dropdown-header"><%= admin_user.name %></li>
								    	<li>
								    		<%= link_to("Edit", {:action => 'edit', :id => admin_user.id}, :data => {:title => 'Edit', :toggle => 'modal', :target => '#edit', :placement => 'top'}, :rel => 'tooltip') %>
								      </li>
								      <li>
												<%= link_to("Delete", {:action => 'delete', :id => admin_user.id}, :data => {:title => 'Delete', :toggle => 'modal', :target => '#delete', :placement => 'top'}, :rel => 'tooltip') %>
								      </li>
								    </ul>
								  </div>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div><!-- End Table Responsive -->
				<div class="panel-footer">
					<p><%= pluralize(@admin_users.size, 'admin user') %> found</p>
				</div><!-- End Panel Footer -->
			</div><!-- End Panel -->
		</div><!-- End Col -->
	</div><!-- End Row -->
</div><!-- End Container -->

<%= render(:partial => 'layouts/modal_containers') %>
