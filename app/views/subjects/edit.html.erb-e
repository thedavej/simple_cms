<% @page_title = "Edit" %>


<div class="container">
	<div class="row">
		<div class="col-sm-5">

			<h2>Update Subject</h2>

			<%= form_for(:subject, :url => {:action => 'update', :id => @subject.id}) do |f| %>
				<%= render(:partial => "form", :locals => {:f => f}) %>
			<div class="form-buttons">
				<%= link_to("Cancel", {:action => 'index'}, :class => 'btn btn-default btn-sm') %>
				<%= submit_tag("Update Subject", :class => 'btn btn-success btn-sm') %>
			</div>

		  <% end %>
		</div>
	</div>
</div>