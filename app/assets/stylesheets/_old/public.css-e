    margin:0 auto;
    min-height:800px;
    width:1200px
    display: fixed;
}

p, td, ul, ol, li, dl, dt, dd {
	font-family: 'Open Sans',Verdana,Lucida,Arial,Helvetica,sans-serif; 
	font-weight: normal; }

h1, h2, h3, h4, h5, h6, legend, .huge, .large, legend {
    font-family: 'Open Sans',Verdana,Lucida,Arial,Helvetica,sans-serif;
    font-weight: normal;
    display: block;
    margin: 0 0 12px 0;
    line-height: 100%;
    text-shadow: 0 1px 0 rgba(255, 255, 255, 0.75);
    color: #484848
}



