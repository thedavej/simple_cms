.back-to-top {float: right; padding: 0 25px;  }
.editor { font-style: italic; font-weight: lighter; }


.image_left {
    float: left;
    padding-top: 1rem;
    margin-top: 1rem;
    margin-right: 1.5rem;
    margin-bottom: 1rem;
}

.image_right {
    float: right;
    clear: both;
    padding-top: 1.5rem;
    margin-top: 1.rem;
    margin-left: 1.5rem;
    margin-bottom: 1rem;
}

.image_wide {
    display: block;
    width: 640px;
    padding-top: 1rem;
    padding-bottom: 1rem;
    margin: 1rem auto;
}

.image_caption {
    font-size: 14px; 
    text-align: center;
    padding: 5px 0 0 0;
}



