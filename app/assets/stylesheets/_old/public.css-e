/* Content */

img { border: none; float: left; padding: 10px; }
table { border-collapse: collapse; }
table tr th, table tr td { vertical-align: top; text-align: left; 
	padding: 3px; }
a, a:visited { color: #393120; }
a:hover {}

.clear { clear: both; }
.center { text-align: center; }

#content { 
    /*margin: 80px, 0 0 0;*/
